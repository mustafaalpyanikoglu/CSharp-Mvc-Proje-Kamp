@model EntityLayer.Concrete.Writer

@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yazar Düzenleme Sayfası</h2>
@using(Html.BeginForm("EditWriter","Writer",FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Yazar Id")
        @Html.TextBoxFor(w => w.WriterId, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(w => w.WriterName, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterName, null, new { @class = "text-danger" })
        <br />
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(w => w.WriterSurname, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterSurname)
        <br />
        @Html.Label("Yazar Mail")
        @Html.TextBoxFor(w => w.WriterMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterMail)
        <br />
        @Html.Label("Yazar Şifresi")
        @Html.TextBoxFor(w => w.WriterPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterPassword)
        <br />
        @Html.Label("Yazar Görsel Linki")
        @Html.TextBoxFor(w => w.WriterImage, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterImage)
        <br />
        @Html.Label("Yazar Ünvanı")
        @Html.TextBoxFor(w => w.WriterTitel, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterTitel)
        <br />
        @Html.Label("Yazar Hakkımda")
        @Html.TextBoxFor(w => w.WriterAbout, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.WriterAbout)
        <br />
        <button class="btn btn-success">Değişiklikleri Uygula</button>
    </div>
}